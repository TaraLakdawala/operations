{
  "type": "delphi deploy config",
  "version": 1,
  "actions": [

    "// exports",
    {
      "type": "export",
      "src": "src/secrets.py",
      "replace-keywords": [
        "../../secrets.json"
      ],
      "add-header-comment": true
    },
    {
      "type": "export",
      "src": "src/emailer.py",
      "add-header-comment": true
    },

    "// web secrets",
    {
      "type": "move",
      "src": "src/secrets.php",
      "dst": "/var/www/html/secrets.php",
      "replace-keywords": [
        "../secrets.json"
      ],
      "add-header-comment": true
    },

    "// all python sources",
    {
      "type": "move",
      "src": "src/",
      "dst": "../operations/",
      "match": "^.*\\.(py)$",
      "add-header-comment": true
    }

  ]
}
