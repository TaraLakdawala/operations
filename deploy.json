{
  "type": "delphi deploy config",
  "version": 1,
  "actions": [

    "// web secrets",
    {
      "type": "move",
      "src": "src/secrets.php",
      "dst": "/var/www/html/",
      "replace-keywords": [
        "../secrets.json"
      ],
      "add-header-comment": true
    },

    "// python secrets",
    {
      "type": "move",
      "src": "src/secrets.py",
      "dst": "../delphi/operations/",
      "replace-keywords": [
        "../secrets.json"
      ],
      "add-header-comment": true
    },

    "// other python sources",
    {
      "type": "move",
      "src": "src/",
      "dst": "../delphi/operations/",
      "match": "^.*\\.py$",
      "add-header-comment": true
    }

  ]
}
