{
  "type": "delphi deploy config",
  "version": 1,
  "actions": [

    "// exports",
    {
      "type": "export",
      "src": "src/secrets.py",
      "replace-keywords": [
        "../secrets.json"
      ],
      "add-header-comment": true
    },{
      "type": "export",
      "src": "src/emailer.py",
      "add-header-comment": true
    },

    "// imports",
    {"type": "import", "dst": "../operations/secrets.py"},
    {"type": "import", "dst": "../operations/emailer.py"},

    "// web secrets",
    {
      "type": "move",
      "src": "src/secrets.php",
      "dst": "/var/www/html/secrets.php",
      "replace-keywords": [
        "../secrets.json"
      ],
      "add-header-comment": true
    },

    "// other python sources",
    {
      "type": "move",
      "src": "src/backup.py",
      "dst": "../operations/",
      "add-header-comment": true
    },{
      "type": "move",
      "src": "src/heart_monitor.py",
      "dst": "../operations/",
      "add-header-comment": true
    }

  ]
}
